<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Cupholder tray macro -->
  <xacro:macro name="cup_holder_tray" params="colour robot_name">
    
    <xacro:if value="${robot_name == 'rick'}">
        <material name="sep_colour">
            <color rgba="0.0 0.0 1.0 1.0"/> <!--  Blue -->
        </material>
    </xacro:if>

    <xacro:if value="${robot_name == 'morty'}">
        <material name="sep_colour">
            <color rgba="1.0 0.0 0.0 1.0"/> <!--  Red -->
        </material>
    </xacro:if>

    <!-- Xacro properties for wheel dimensions -->
    <xacro:property name="tray_radius" value="0.160"/>
    <xacro:property name="tray_height" value="0.090"/>
    
    <link name="cup_holder_tray">
        <visual>
            <geometry>
                <cylinder length="${tray_height}" radius="${tray_radius}"/>
            </geometry>
            <!-- <material name="blue"/> -->
            <material name="${robot_name}_material">
                <xacro:if value="${robot_name == 'rick'}">
                    <color rgba="1.0 0.0 0.0 1.0"/>  <!-- Red -->
                </xacro:if>
                <xacro:if value="${robot_name == 'morty'}">
                    <color rgba="0.0 0.0 1.0 1.0"/>  <!-- Blue -->
                </xacro:if>
            </material>
        </visual>

        <collision>
            <geometry>
                <cylinder length="${tray_height}" radius="${tray_radius}"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="0.02"/>
            <inertia ixx="0.00008117" ixy="0" ixz="0" iyy="0.00008117" iyz="0" izz="0.000001"/>
        </inertial>

    </link>

    <joint name="joint_cup_holder_tray" type="fixed">
        <origin xyz="0.0 0.0 0.3425" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="cup_holder_tray"/>
    </joint>

    <gazebo reference="cup_holder_tray">
        <material>${colour}</material>
    </gazebo>

  </xacro:macro>

</robot>