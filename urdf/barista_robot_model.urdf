<?xml version="1.0"?>
<robot name="barista_robot">

  <material name="blue">
      <color rgba="0.0 0.0 1.0 1"/>
  </material>

  <material name="black">
      <color rgba="0.0 0.0 0.0 1"/>
  </material>

  <material name="cany">
      <color rgba="0.088656 0.428691 0.491021 1"/>
  </material>

  <link name="base_link">
      <inertial>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
        <mass value="1.0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size="0.1 0.1 0.1"/>
        </geometry>
    </visual>
  </link>

    <!-- chassis -->
    <link name="chassis">
        <visual>
            <geometry>
                <cylinder length="0.155" radius="0.178"/>
            </geometry>
            <material name="blue"/>
        </visual>  
    </link>

    <joint name="base_link_joint" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="chassis"/>
        <axis xyz="0.0 0.0 0.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>

    <!-- Wheels -->
    <link name="left_wheel">      
        <visual>
            <origin rpy="0 1.5707 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.0206" radius="0.0352"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="joint_left_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0.14 0.0 -0.070"/>
        <child link="left_wheel"/>
        <parent link="chassis"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <link name="right_wheel">      
        <visual>
            <origin rpy="0 1.5707 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.0206" radius="0.0352"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="joint_right_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="-0.14 0.0 -0.070"/>
        <child link="right_wheel"/>
        <parent link="chassis"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!-- Caster Wheels -->
    <!-- Front caster wheel -->
    <link name="front_yaw_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
            <cylinder length="0.005" radius="0.0352"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <joint name="front_yaw_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 0.12 -0.070" />
        <parent link="chassis" />
        <child link="front_yaw_link" />
        <axis xyz="0 0 1" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <link name="front_roll_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
            <cylinder length="0.010" radius="0.0352"/>
            </geometry>
            <material name="cany"/>
        </visual>
    </link>

    <joint name="front_roll_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="front_yaw_link" />
        <child link="front_roll_link" />
        <axis xyz="1 0 0" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <link name="front_pitch_link">
        <visual>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
            <sphere radius="0.0352"/>
        </geometry>
        <material name="green_dark"/>
        </visual>
    </link>

    <joint name="front_pitch_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="front_roll_link" />
        <child link="front_pitch_link" />
        <axis xyz="0 1 0" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>
    <!-- Back caster wheel -->
    <link name="back_yaw_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.005" radius="0.0352"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <joint name="back_yaw_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0.0 -0.12 -0.070" />
        <parent link="chassis" />
        <child link="back_yaw_link" />
        <axis xyz="0 0 1" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <link name="back_roll_link">
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.010" radius="0.0352"/>
            </geometry>
            <material name="cany"/>
        </visual>
    </link>

    <joint name="back_roll_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="back_yaw_link" />
        <child link="back_roll_link" />
        <axis xyz="1 0 0" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <link name="back_pitch_link">
        <visual>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
            <sphere radius="0.0352"/>
        </geometry>
        <material name="green_dark"/>
        </visual>
    </link>

    <joint name="back_pitch_joint" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="back_roll_link" />
        <child link="back_pitch_link" />
        <axis xyz="0 1 0" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <!-- standoff rods -->
    <link name="standoff_front_left">
        <visual>
            <origin xyz="0.12 -0.065 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.010" length="0.220"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="joint_standoff_front_left" type="fixed">
        <origin rpy="0 0 0" xyz="0 0.0 0.1875"/>
        <child link="standoff_front_left"/>
        <parent link="chassis"/>
        <!-- <axis rpy="0 0 0" xyz="0 1 0"/> -->
        <!-- <joint_properties damping="1.0" friction="1.0"/> -->
    </joint>

    <link name="standoff_front_right">
        <visual>
            <origin xyz="0.12 0.065 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.010" length="0.220"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="joint_standoff_front_right" type="fixed">
        <origin rpy="0 0 0" xyz="0 0.0 0.1875"/>
        <child link="standoff_front_right"/>
        <parent link="chassis"/>
        <!-- <axis rpy="0 0 0" xyz="0 1 0"/> -->
        <!-- <joint_properties damping="1.0" friction="1.0"/> -->
    </joint>

    <link name="standoff_back_left">
        <visual>
            <origin xyz="-0.12 -0.065 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.010" length="0.220"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="joint_standoff_back_left" type="fixed">
        <origin rpy="0 0 0" xyz="0 0.0 0.1875"/>
        <child link="standoff_back_left"/>
        <parent link="chassis"/>
        <!-- <axis rpy="0 0 0" xyz="0 1 0"/> -->
        <!-- <joint_properties damping="1.0" friction="1.0"/> -->
    </joint>

    <link name="standoff_back_right">
        <visual>
            <origin xyz="-0.12 0.065 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.010" length="0.220"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="joint_standoff_back_right" type="fixed">
        <origin rpy="0 0 0" xyz="0 0.0 0.1875"/>
        <child link="standoff_back_right"/>
        <parent link="chassis"/>
        <!-- <axis rpy="0 0 0" xyz="0 1 0"/> -->
        <!-- <joint_properties damping="1.0" friction="1.0"/> -->
    </joint>

    <!-- Cup holder tray -->
    <link name="cup_holder_tray">
        <visual>
            <geometry>
                <cylinder length="0.090" radius="0.160"/>
            </geometry>
            <material name="blue"/>
        </visual>  
    </link>

    <joint name="joint_cup_holder_tray" type="fixed">
        <origin xyz="0.0 0.0 0.3425" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="cup_holder_tray"/>
        <!-- <axis xyz="0.0 0.0 0.0"/> -->
        <!-- <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/> -->
    </joint>

</robot>